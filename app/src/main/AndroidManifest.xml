<?xml version="1.0" encoding="utf-8"?>

<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.sottocorp.okhttpretrofitmoshipicasso">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:fullBackupContent="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">

    <activity
      android:label="@string/app_name"
      android:name="com.sottocorp.okhttpretrofitmoshipicasso.activities.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:label="@string/activity_title_JSON_object"
      android:name="com.sottocorp.okhttpretrofitmoshipicasso.activities.JsonObjectActivity"
      android:parentActivityName="com.sottocorp.okhttpretrofitmoshipicasso.activities.MainActivity"/>

    <activity
      android:label="@string/activity_title_JSON_array"
      android:name="com.sottocorp.okhttpretrofitmoshipicasso.activities.JsonArrayActivity"
      android:parentActivityName="com.sottocorp.okhttpretrofitmoshipicasso.activities.MainActivity"/>

    <activity
      android:label="@string/activity_title_image_loading"
      android:name="com.sottocorp.okhttpretrofitmoshipicasso.activities.ImageLoadingActivity"
      android:parentActivityName="com.sottocorp.okhttpretrofitmoshipicasso.activities.MainActivity"/>

    <activity
      android:label="@string/activity_title_image_transformation"
      android:name="com.sottocorp.okhttpretrofitmoshipicasso.activities.ImageTransformationActivity"
      android:parentActivityName="com.sottocorp.okhttpretrofitmoshipicasso.activities.MainActivity"/>

  </application>

</manifest>
